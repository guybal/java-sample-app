{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [    
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "exampleapp",
            "request": "attach",
            "hostName": "localhost",
            "port": 5005,
            "preLaunchTask": "app: build and run jar (debug)",
            "postDebugTask": "terminate app: run jar (debug)"

        },
        {
            "type": "java",
            "name": "Spring Boot",
            "request": "attach",
            "hostName": "localhost",
            "port": 5005,
            "preLaunchTask": "app: build and run jar (debug)",
            "postDebugTask": "terminate app: run jar (debug)"
        },
        {
            "type": "java",
            "name": "Spring Boot (Dev Profile - H2)",
            "request": "launch",
            "mainClass": "org.example.app.main",
            "projectName": "app",
            "args": [],
            "vmArgs": [
                "-Dspring.profiles.active=dev",
                "-Xmx512m"
            ],
            "env": {},
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "java",
            "name": "Spring Boot (Prod Profile - PostgreSQL)",
            "request": "launch",
            "mainClass": "org.example.app.main",
            "projectName": "app",
            "args": [],
            "vmArgs": [
                "-Dspring.profiles.active=prod",
                "-Xmx512m"
            ],
            "env": {
                "DATABASE_URL": "jdbc:postgresql://localhost:5432/drinksdb",
                "DATABASE_USER": "postgres",
                "DATABASE_PASSWORD": "yourpassword",
                "HIBERNATE_DDL_AUTO": "update",
                "SHOW_SQL": "true"
            },
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}